<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAvalonDeepBlue"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/imageview_icon_size_big"
            android:layout_height="@dimen/imageview_icon_size_big"
            android:tint="@color/colorAvalonYellow"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:foregroundTint="@color/colorAvalonDeepYellow"
            android:src="@drawable/ic_cameradic"/>
    </RelativeLayout>
</LinearLayout>