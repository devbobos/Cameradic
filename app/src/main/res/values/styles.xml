<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorAvalonDeepBlue</item>
    </style>
    <style name="AlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">

        <item name="android:color">@color/colorAvalonWhite</item>
        <item name="android:colorAccent">@color/colorAvalonDeepYellow</item>
        <item name="android:colorPrimary">@color/colorAvalonWhiteActionDown</item>
        <item name="android:textColorPrimary">@color/colorAvalonWhiteActionDown</item>
        <item name="android:textColor">@color/colorAvalonDeepBlue</item>
    </style>
</resources>
